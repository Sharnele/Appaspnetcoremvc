@model App.Models.updateEtudiant
@{
}

<h1> MODIFIER UN ETUDIANT</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="Id" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>

    </div>
    <div class="mb-3">
        <label for="Nom" class="form-label">Nom</label>
        <input type="text" class="form-control" asp-for="Nom">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn btn-danger"
        asp-action="Delete"
        asp-controller="Etudiant">Delete</button>
</form>
